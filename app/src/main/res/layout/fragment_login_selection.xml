<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginSelectionFragment"
    android:background="#81CCDC">


    <ImageView
        android:id="@+id/imageViewAppIcon"
        android:layout_width="308dp"
        android:layout_height="282dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/mypuigminiatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- add some padding -->
    <Button
        android:id="@+id/buttonIniciarSesionSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="66dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="@string/iniciar_sesi_n"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#E63570E0"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterSelection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAppIcon" />

    <Button
        android:id="@+id/buttonRegisterSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="@string/registrarse"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="#E63570E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIniciarSesionSelection" />

</androidx.constraintlayout.widget.ConstraintLayout>